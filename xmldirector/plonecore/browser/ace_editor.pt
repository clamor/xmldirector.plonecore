<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="xmldirector.plonecore">
<body>

<slot metal:fill-slot="javascript_head_slot">
    <script type="text/javascript" charset="utf8" tal:attributes="src string:$portal_url/++resource++xmldirector.plonecore/ace-builds/src-noconflict/ace.js"></script>
    <script type="text/javascript" charset="utf8" tal:attributes="src string:$portal_url/++resource++xmldirector.plonecore/jquery.sprintf.js"></script>
    <script type="text/javascript" charset="utf8" tal:attributes="src string:$portal_url/++resource++xmldirector.plonecore/local2.js"></script>
    <script type="text/javascript" tal:content="string: ACE_MODE='${options/ace_mode}'"></script>
    <script type="text/javascript" tal:content="string: ACE_READONLY=${options/ace_readonly}"></script>
</slot>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">

    <style type="text/css" media="screen">
        .editor { 
            position: relative;
            height: 500px;
            margin-bottom: 1em;
        }
        
        .status-ok {
            font-weight: bold;
            color: green;
        }

        .status-error {
            font-weight: bold;
            color: red;
        }
    </style>

        <div class="ace-editable editor" 
            tal:attributes="data-url options/action_url; data-length python: len(options['content'])"
            tal:content="options/content" />

    <script type="text/javascript">
        $(document).ready(function() {
            init_ace_editors();
        });
    </script>

  </metal:content-core>
</metal:main>

</body>
</html>

